# Application
APP_ENV=development
APP_DEBUG=true
APP_PORT=8000
APP_SECRET_KEY=change-this-to-a-random-32-char-string

# Database
DATABASE_URL=postgresql+asyncpg://chicx:chicx_dev_pass@localhost:5432/chicx
DATABASE_POOL_SIZE=5

# Redis
REDIS_URL=redis://localhost:6379/0

# WhatsApp (Meta Cloud API)
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id
WHATSAPP_ACCESS_TOKEN=your_permanent_access_token
WHATSAPP_VERIFY_TOKEN=your_webhook_verify_token
WHATSAPP_APP_SECRET=your_app_secret_for_signature_verification

# DeepSeek LLM
DEEPSEEK_API_KEY=your_deepseek_api_key
DEEPSEEK_MODEL=deepseek-chat
DEEPSEEK_BASE_URL=https://api.deepseek.com

# Embeddings (OpenAI or compatible API for vector search)
OPENAI_API_KEY=your_openai_api_key
EMBEDDING_MODEL=text-embedding-ada-002
EMBEDDING_BASE_URL=https://api.openai.com/v1

# Bolna (Voice Agent) - Managed Platform (PRIMARY)
# Bolna handles all voice AI, telephony, and call recording
# Configure webhooks in Bolna dashboard to point to your server:
#   - Call Complete: https://yourserver.com/webhooks/bolna/call-complete
#   - Transcript: https://yourserver.com/webhooks/bolna/transcript
#   - Tool Call: https://yourserver.com/webhooks/bolna/tool
BOLNA_BASE_URL=https://api.bolna.dev
BOLNA_API_KEY=your_bolna_platform_api_key  # Get from https://platform.bolna.ai
BOLNA_WEBHOOK_SECRET=your_bolna_webhook_secret  # Set in Bolna dashboard webhook config

# Admin Dashboard
ADMIN_API_KEY=your_admin_api_key

# CHICX Backend
CHICX_API_BASE_URL=https://api.chicx.in
CHICX_API_KEY=your_chicx_api_key

# Shiprocket
SHIPROCKET_WEBHOOK_SECRET=your_shiprocket_webhook_secret
